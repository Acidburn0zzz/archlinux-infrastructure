exclude_paths:
  - misc
skip_list:
  # line too long (x > 80 characters) (line-length)
  - 'line-length'
  # Do not recommend running tasks as handlers
  - 'no-handler'
  # Do not force galaxy info in meta/main.yml
  - 'meta-no-info'
  # Allow package versions to be specified as 'latest'
  - 'package-latest'
