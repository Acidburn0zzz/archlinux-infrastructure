[uwsgi]
plugins=python
chdir={{ security_tracker_dir }}
module=tracker:create_app()
socket=/run/uwsgi/security-tracker.sock
chmod-socket=660
processes=4
threads=2
master=true
uid=security
gid=http
thunder-lock = true
daemonize=/var/log/uwsgi/security.log
stats=/run/uwsgi/security-tracker-stats.sock
